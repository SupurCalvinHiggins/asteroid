
--------------------------------------
-- patterns_test8.ast
-- a simple program to test for
-- subsumption detection in Asteroid.
--------------------------------------
--------------------------------------
load "io".
load "util".

let ptrn1 = pattern with 1.10.
let ptrn2 = pattern with 1.10000.

-- A testing function with multiple patterns
function testFunction
    with 1.10 do       -- *** will subsume 1.10000...
        return 1. 
    orwith 1.2 do 
        return 2.
    orwith 1.3 do 
        return 3.
    orwith *ptrn2 do   -- *** duplicate pattern 1.10
        return 4.     
    end.
    
try
    -- Evaluate the function with a test input.
    let x = 1.1.
    let y = testFunction( x ).

    -- If the function test worked, print the output we got.
    println( "The value returned is: " + y ).
catch Exception("RedundantPatternFound",s) do
    println("PASS.").
catch e do
    println("FAIL.").
    throw Error("FAIL: unexpected error "+e).
end.