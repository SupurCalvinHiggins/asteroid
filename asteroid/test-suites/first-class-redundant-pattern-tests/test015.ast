
--------------------------------------
-- patterns_test14.ast
-- a simple program to test for
-- subsumption detection in Asteroid.
--------------------------------------
--------------------------------------
load system io.
load "util".

let ptrn1 = pattern with [ h1 | h2 | h3 |  tail ].
let ptrn2 = pattern with [ h1 | h2 | h3 | h4 | tail ].
let ptrn3 = pattern with [ h1 | tail ].

-- A testing function with multiple patterns
function testFunction
    with *ptrn1 do  -- *** will SUBSUME [ h1 | h2 | h3 | h4 | tail ] ***
        return 1.
    with *ptrn2 do
        return 2. 
    with *ptrn3 do -- ** will not catch ** can still make matches others can't! ex. [ 1, 2]
        return 3. 
    end.
    
try 
    -- Evaluate the function with a test input.
    let x = testFunction[ 3 , 4 ].

    -- If the function test worked, print the output we got.
    io @println( "The value returned is: " + x ).
catch Exception("RedundantPatternFound",s) do
    io @println("PASS.").
catch e do
    io @println("FAIL.").
    throw Error("FAIL: unexpected error "+e).
end.