
--------------------------------------
-- patterns_test22.ast
-- a simple program to test for
-- subsumption detection in Asteroid.
--------------------------------------
--------------------------------------
load "io".
load "util".

let ptrn1 = pattern with 0.
let ptrn2 = pattern with ( var1 , var2 ).
let ptrn3 = pattern with (x:%integer, y:%integer ).
let ptrn4 = pattern with (n:%real, m:%real).

function testFunction
    with *ptrn1 do
        return 1.
    with *ptrn2 do          -- Will leave all following patterns redundant
        return -1.
    with *ptrn3 do
        return 2.
    with *ptrn4 do
        return 3.
    end.
    
try 
    -- Evaluate the function with a test input.
    let x = testFunction( 5,1 ).

    -- If the function test worked, print the output we got.
    println( "The value returned is: " + x  ). 
catch Exception("RedundantPatternFound",s) do
    println("PASS.").
catch e do
    println("FAIL.").
    throw Error("FAIL: unexpected error "+e).
end.