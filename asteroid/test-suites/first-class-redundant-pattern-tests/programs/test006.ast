
--------------------------------------
-- patterns_test5.ast
-- a simple program to test for
-- subsumption detection in Asteroid.
--------------------------------------
--------------------------------------
load "io".
load "util".

let ptrn1 = pattern with "name1".
let ptrn2 = pattern with "name2".
let ptrn3 = pattern with "name2".
let ptrn4 = pattern with "name4".

-- A testing function with multiple patterns
function testFunction
    with *ptrn1 do  
        return 1.
    with *ptrn2 do   -- *** will SUBSUME "name2" ***
        return 2.
    with *ptrn3 do   -- duplicate pattern
        return 2.
    with *ptrn4 do 
        return 2.
    end.
        
try
    -- Evaluate the function with a test input.
    let x = testFunction( "name4" ).

    -- If the function test worked, print the output we got.
    println( "The value returned is: " + x ).
catch Exception("RedundantPatternFound",s) do
    println("PASS.").
catch e do
    println("FAIL.").
    throw Error("FAIL: unexpected error "+e).
end.