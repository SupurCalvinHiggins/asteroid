
--------------------------------------
-- patterns_test23.ast
-- a simple program to test for
-- subsumption detection in Asteroid.
--------------------------------------
--------------------------------------
load system io.
load "util".

let ptrn1 = pattern with x:%tuple.
let ptrn2 = pattern with (x:%integer, y:%integer ).
let ptrn3 = pattern with (n:%real, m:%real).
let ptrn4 = pattern with ( x, y, z).

function testFunction
    with *ptrn1 do                   -- Will render all following patterns redundant
        return 1.
    with *ptrn2 do
        return 2.
    with *ptrn3 do
        return 3.
    with *ptrn4 do
        return 4.
    end.
    
    
try 
    -- Evaluate the function with a test input.
    let x = testFunction( (5,1) ).

    -- If the function test worked, print the output we got.
    io @println( "The value returned is: " + x  ). 
catch Exception("RedundantPatternFound",s) do
    io @println("PASS.").
catch e do
    io @println("FAIL.").
    throw Error("FAIL: unexpected error "+e).
end.