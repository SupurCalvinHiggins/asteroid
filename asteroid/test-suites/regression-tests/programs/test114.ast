-- tests for formatting

load system io.
load system type.
load system math.

let b = tostring(true,stringformat(10)).
println b.
assert(b is "      true").

let i = tostring(5,stringformat(5)).
println i.
assert(i is "    5").

let s = tostring("hello there!",stringformat(30)).
println s.
assert(s is "                  hello there!").

let r = tostring(pi,stringformat(6,3)).
println r.
assert(r is " 3.142").
